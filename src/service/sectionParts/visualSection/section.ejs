<style>
    .MsoTableGrid {
        border-spacing: initial;
        border-collapse: collapse;
        background: #F0F0F0;
        width: 100%;
        table-layout: fixed;
        margin: 5px auto;
        word-wrap: break-word;
        border: 1px solid #E3F1D5;
        line-height: 1.625;
        color: darkslategray;
        font-family: Nunito, sans-serif;
    }

    .bad{
        color:red;
    }

    .good{
        color:green;
    }
</style>

<table class="MsoTableGrid" align="center">
    <tbody>
        <tr style=" font-size: 16px; border: 1px solid #E3F1D5; ">
            <td style="width:100%; color: white; padding:8px;margin:10px; padding:8px;text-align:center;background-color:#888888"                 
                colspan="2">
                <strong >Visual Report</strong>
            </td>         
        </tr>
        <tr style=" font-size: 12px; border: 1px solid #E3F1D5;">
            <td  style="width: 50%; text-align: left; padding: 8px; ">
                <p><strong>Exterior Elements</strong></p>
            </td>
            <td style="width: 50%; text-align: left; padding: 8px;  border-left: groove;  ">
                <p >&nbsp;<%= typeof exteriorelements !== 'undefined' ? exteriorelements : '' %></p>
            </td>
        </tr>
        <tr style="background: #C0C0C0; font-size: 12px; border: 1px solid #E3F1D5;">
            <td  style="width: 50%; text-align: left; padding: 8px; " >
                <p ><strong>Water Proofing Elements</strong></p>
            </td>
            <td  style="width: 50%; text-align: left; padding: 8px;  border-left: groove;  ">
                <p>&nbsp;<%= typeof waterproofingelements !== 'undefined' ? waterproofingelements : '' %></p>
            </td>
        </tr>
        <tr style=" font-size: 12px; border: 1px solid #E3F1D5;">
            <td  style="width: 50%; text-align: left; padding: 8px; ">
                <p ><strong>Visual Review</strong></p>
            </td>
            <td  class="<%= visualreview === 'Bad' ? 'bad' : 'good' %>" style="width: 50%; text-align: left; padding: 8px;  border-left: groove;  ">
                <%= visualreview || '' %>
            </td>
        </tr>
        <tr style="background: #C0C0C0; font-size: 12px; border: 1px solid #E3F1D5;">
            <td style="width: 50%; text-align: left; padding: 8px; ">
                <p ><strong>Any Visual Signs of leaks</strong></p>
            </td>
            <td  class="<%= visualsignsofleak === 'False' ? 'good' : 'bad' %>"  style="width: 50%; text-align: left; padding: 8px;  border-left: groove; ">
                <%= visualsignsofleak?'Yes':'No' %>
            </td>
        </tr>
        <tr style=" font-size: 12px; border: 1px solid #E3F1D5;">
            <td style="width: 50%; text-align: left; padding: 8px; ">
                <p ><strong>Further Invasive Review Required</strong></p>
            </td>
            <td class="<%= furtherinvasivereviewrequired ? 'good' : 'bad' %>"  style="width: 50%; text-align: left; padding: 8px;  border-left: groove;  ">
                <%= furtherinvasivereviewrequired?'Yes':'No' %>
            </td>
        </tr>
        <tr style="background: #C0C0C0; font-size: 12px; border: 1px solid #E3F1D5;">
            <td style="width: 50%; text-align: left; padding: 8px; ">
                <p ><strong>Condition Assessment</strong></p>
            </td>
            <td class="<%= conditionalassessment === 'Fail' ? 'bad' : 'good' %>"  style="width: 50%; text-align: left; padding: 8px;  border-left: groove;  ">
                <%= conditionalassessment || '' %>
            </td>
        </tr>
        <tr style=" font-size: 12px; border: 1px solid #E3F1D5;">
            <td  style="width: 50%; text-align: left; padding: 8px; ">
                <p ><strong>Additional Considerations or Concerns</strong></p>
            </td>
            <td  style="width: 50%; text-align: left; padding: 8px;  border-left: groove;  ">
                <p >&nbsp;<%= additionalconsiderations || '' %></p>
            </td>
        </tr>
        <tr style="background: #C0C0C0; font-size: 12px; border: 1px solid #E3F1D5;">
            <td style="width: 50%; text-align: left; padding: 8px; ">
                <p ><strong>Life Expectancy (EEE)</strong></p>
            </td>
            <td  class="<%= eee === '0-1 Years' ? 'bad' : 'good' %>" style="width: 50%; text-align: left; padding: 8px;  border-left: groove;  ">
                <%= eee || '' %>
            </td>
        </tr>
        <tr style=" font-size: 12px; border: 1px solid #E3F1D5;">
            <td style="width: 50%; text-align: left; padding: 8px; ">
                <p ><strong>Life Expectancy (LBC)</strong></p>
            </td>
            <td class="<%= lbc === '0-1 Years' ? 'bad' : 'good' %>" style="width: 50%; text-align: left; padding: 8px; border-left: groove; ">
                <%= lbc || '' %>
            </td>
        </tr>
        <tr style="background: #C0C0C0; font-size: 12px; border: 1px solid #E3F1D5;">
            <td style="width: 50%; text-align: left; padding: 8px; ">
                <p><strong>Life Expectancy (AWE)</strong></p>
            </td>
            <td class="<%= awe === '0-1 Years' ? 'bad' : 'good' %>" style="width: 50%; text-align: left; padding: 8px;  border-left: groove;  ">
                <%= awe || '' %>
            </td>            
        </tr>
    </tbody>
</table>